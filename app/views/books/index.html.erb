　<%= flash[:complete] %>
<p id="notice"><%= notice %></p>

<h3>Books</h3>

<table>
  <theat>
	  <tr>
		  <th>Title</th>
		  <th>Body</th>
		  <!-- セルの結合 -->
	    <th colspan="3"></th>
	  </tr>
  </theat>

  <tbody>
  	<% @books.each do |book|%>
  	<tr>
  		<td><%= book.title %></td>
  		<td><%= book.body %></td>
  		<td><%= link_to "Show","/books/#{book.id}"%></td>
  		<td> <%= link_to "Edit", "/books/#{book.id}/edit"%></td>
  		<td><%= link_to "Destroy", "/books/#{book.id}/", 
	      method: :delete, "data-confirm" => "Are you sure?" %></td>
  	</tr>
  	<% end %>
  </tbody>
</table>

<br>
<!-- 2段目 -->

<table>

<h3>New book</h3>

<%= form_for(@book, url:'/books') do |f|%>

<h6>Title</h6>
<%= f.text_field :title%>
<h6>Body</h6>
<%= f.text_area :body%>
<br>
<%= f.submit 'Create Book'%>

<% end %>

</table>
