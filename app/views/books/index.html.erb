<%= flash[:destroy] %>
<p id="notice"><%= notice %></p>
<%= flash[:create] %>
<p id="notice"><%= notice %></p>

<h3>Books</h3>

<table>
  <theat>
	  <tr>
		  <th>Title</th>
		  <th>Body</th>
		  <!-- セルの結合 -->
	    <th colspan="3"></th>
	  </tr>
  </theat>

  <tbody>
  	<% @books.each do |book|%>
  	<tr>
  		<td><%= book.title %></td>
  		<td><%= book.body %></td>
  		<td><%= link_to "Show","/books/#{book.id}"%></td>
  		<td> <%= link_to "Edit", "/books/#{book.id}/edit"%></td>
  		<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  	</tr>
  	<% end %>
  </tbody>
</table>

<br>
<!-- 2段目 -->
<table>
 <% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<h3>New book</h3>

<%= form_for(@book) do |f|%>

<h6>Title</h6>
<%= f.text_field :title%>
<h6>Body</h6>
<%= f.text_area :body%>
<br>
<%= f.submit 'Create Book'%>

<% end %>

</table>
